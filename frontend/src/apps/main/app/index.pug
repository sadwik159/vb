  style.
    body { margin: 0; padding: 0; }
    .splash-screen-animated {
      position: absolute; width: 100vw; height: 100vh;
      background: #fff;
      animation: logo-fade .2s forwards;
      animation-delay: 1.9s;
    }
    .splash-screen-animated.end {
      animation: none;
    }
    .splash-screen-animated>div {
      position: absolute; left: 50%; top: 50%; transform: translate(-42%, -50%); transform-origin: 50% 100%;
      width: 200px; height: 200px;
      animation: logo 1s forwards;
      animation-delay: .9s;
    }
    .splash-screen-animated.end>div {
      animation: logo 0s forwards; animation-delay: 0s;
    }
    .splash-screen-animated>div::before {
      content: "";
      position: absolute; left: 57%; top: 53%; transform: translate(-150%, -75%);
      opacity: 0;

      width: 100px; height: 100px;
      animation: more .5s forwards;
      animation-delay: .5s;

      background-image: url("#{require('!!base64-inline-loader!../../../assets/svg/>.svg')}");
      background-position: center;
      background-size: contain;
      background-repeat: no-repeat;
    }
    .splash-screen-animated.end>div::before {
      animation: more 0s forwards; animation-delay: 0s;
    }
    .splash-screen-animated>div::after {
      content: "";
      position: absolute; left: 43%; top: 47%;

      width: 100px; height: 100px;
      animation: less .5s forwards;

      background-image: url("#{require('!!base64-inline-loader!../../../assets/svg/>.svg')}");
      background-position: center;
      background-size: contain;
      background-repeat: no-repeat;
    }
    .splash-screen-animated.end>div::after {
      animation: less 0s forwards;
    }
    @keyframes logo {
      from {
        transform: translate(-42%, -50%);
      }
      25%{
        transform: translate(-42%, -50%) rotate(4deg);
      }
      75%{
        transform: translate(-42%, -50%) rotate(-11deg);
      }
      to {
        transform: translate(-42%, -50%) rotate(-10deg);
      }
    }
    @keyframes logo-fade {
      from {
        display: block; opacity: 1;
      }
      to {
        display: none; opacity: 0; z-index: -1000;
      }
    }
    @keyframes less {
      from {
        transform: translate(100%, -25%) scaleX(-1);
        opacity: 0;
      }
      to {
        opacity: 1;
        transform: translate(-50%, -25%) scaleX(-1);
      }
    }
    @keyframes more {
      from {
        transform: translate(-150%, -75%);
        opacity: 0;
      }
      to {
        opacity: 1;
        transform: translate(-50%, -75%);
      }
    }
    body > .splash-screen-animated {
      z-index: 1000;
    }
    body > .splash-screen-animated.end {
      z-index: 999;
    }
    #app-container > .splash-screen-animated.end {
      display: none;
    }
    #app-container{
      display: none;
    }
    * {
      font-family: "Tajawal", -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB",
        "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
        "Segoe UI Symbol";
    }

- dir = ("{|language code|}" === "ar" ? "rtl" : "ltr");

body(dir=dir)
